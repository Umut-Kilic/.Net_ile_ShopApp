@model OrderModel

<h1>CheckOut</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3"> Sipariş Detayı</h4>
        <form asp-controller="Cart" asp-action="Checkout" method="post">
            <input type="hidden" name="CartId" value="0" />
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.FirstName"></label>
                    <input class="form-control" type="text" asp-for="@Model.FirstName" />
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.LastName"></label>
                    <input class="form-control" type="text" asp-for="@Model.LastName" />
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address"></label>
                <textarea asp-for="@Model.Address" class="form-control"></textarea>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.City"></label>
                    <input asp-for="@Model.City" class="form-control" type="text" />
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Phone"></label>
                    <input asp-for="@Model.Phone" class="form-control" type="text" />
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" class="form-control" type="email" />
                </div>
            </div>


            <h4 class="mb-3"> Ödeme Bilgileri</h4>

            <hr class="mb-3" />

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.CartName"></label>
                    <input asp-for="@Model.CartName" class="form-control" type="text" />
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.CartNumber"></label>
                    <input asp-for="@Model.CartNumber" class="form-control" type="text" />
                </div>

            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.ExpirationMonth"></label>
                    <input asp-for="@Model.ExpirationMonth" class="form-control" type="text" />
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.ExpirationYear"></label>
                    <input asp-for="@Model.ExpirationYear" class="form-control" type="text" />
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Cvc"></label>
                    <input asp-for="@Model.Cvc" class="form-control" type="text" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary vw-100">
                Kaydet

            </button>
        </form>
    </div>
    <div class="col-md-4">
        <h4 class="mb-3">
            <span>Özet Bilgiler</span>
            
        </h4>
            <ul class="list-group mb-3">

                @foreach (var item in Model.CartModel.CartItems)
                {
                    <li class="list-group-item d-flex justify-content-between">
                        <div>
                            <h6>@item.Name</h6>
                        </div>
                        <span class="text-muted">
                            @item.Price.ToString("c")
                        </span>
                    </li>
                }

                
               
                <li class="list-group-item d-flex justify-content-between">
                    <span>Toplam (TL)</span>
                    <strong class="text-muted">
                        @Model.CartModel.TotalPrice() TL
                    </strong>
                </li>
            </ul>
    
    </div>
</div>