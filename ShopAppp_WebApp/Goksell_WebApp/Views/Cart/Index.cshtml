@model CartModel

    <h1 class="h3">Alışveriş Sepeti</h1>
    <hr />
    <div class="row">
        <div class="col-md-8">
            @if (Model.CartItems.Count()==0)
            {
                <div class="alert alert-warning">
                    Sepetinzde ürün bulunmuyor.
                </div>
            }
            else
            {
            
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th></th> 
                        </tr>
                    </thead>   
                    <tbboy>
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td>
                                    <img src="~/img/@item.ImageUrl" width="80" />
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Quantity</td>
                                <td>@(item.Quantity*item.Price)</td>
                                <td>
                                    <form asp-controller="Cart" asp-action="DeleteFromCart" method="post">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <button class="btn btn-danger">
                                            <i class="fa fa-times fa-fw"></i>
                                        </button>
                                    </form>




                                
                                </td>
                            </tr>

                        }
                    </tbboy>
                </table>

            }
        </div>
        <div class="col-md-4">
            <div class="text-left">
                <h4>Siapariş Özeti</h4>
            </div>
            @if (Model.CartItems.Count() == 0)
            {
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Sepet Toplamı</th>
                            <td>0 TL</td>
                        </tr>

                        <tr>
                            <th>Kargo Bedeli</th>
                            <td >0 TL</td>
                        </tr>

                        <tr>
                            <th>Siapariş Toplamı</th>
                            <td>0 TL</td>
                        </tr>
                    </tbody>
                </table>
            }
            else
            {


                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Sepet Toplamı</th>
                            <td>@(Model.CartTotal().ToString("c"))</td>
                        </tr>

                        <tr>
                            <th>Kargo Bedeli</th>
                            <td class="@(Model.ShippingPrice()? "text-success":"text-danger")">@(Model.ShippingPrice()? "Bedava":"19.99 Tl")</td>
                        </tr>

                        <tr>
                            <th>Siapariş Toplamı</th>
                            <td>@(Model.TotalPrice().ToString("c"))</td>
                        </tr>
                    </tbody>
                </table>

            }

            <div class="text-center">
                <a href="/" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-left fa-fw"></i> Alışverişe devam et
                </a>

                <a href="/checkout" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-right fa-fw"></i> Alışverişi tamamla
                </a>
            </div>
        </div>
    </div>