@model List<Category>

<div class="list-group">

    <a href="/products" class="list-group-item list-group-item-action">Tüm Kategoriler</a>
    @foreach (var item in Model)
    {
        <a asp-controller="Shop" 
           asp-action="List" 
           asp-route-category="@item.Url" 
           class="list-group-item list-group-item-action @(item.Url==ViewBag.SelectedCategory?"active":"")">
                @item.Name</a>
    }

</div>