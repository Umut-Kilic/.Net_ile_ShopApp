@model Product
<div class="card mb-2">
    <img src="~/img/@Model.ImageUrl" class="card-img-top w-100" style="max-height:25em" />
    <div class="card-body">
        <h5 class="card-title">
            @Model.Name
        </h5>
        <p class="card-text">
        @Model.Price <small class="text-muted"><i class="fa-solid fa-turkish-lira-sign"></i></small>
        </p>
        
        @*<a class="btn btn-sm btn-success" href="/product/details/@Model.ProductId">İncele</a>*@
    <div class="card-footer text-center">
       
                <a class="btn btn-sm btn-outline-primary " asp-controller="Shop" asp-action="Details" asp-route-url="@Model.Url">Details</a>
                <a class="btn btn-sm btn-outline-primary" asp-controller="Shop" asp-action="AddtoCart" asp-route-id="@Model.ProductId">Add to Cart</a>
          
      
    </div>
    </div>
</div>