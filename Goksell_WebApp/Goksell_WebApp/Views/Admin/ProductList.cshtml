@model ProductListViewModel




<div class="row">
    <div class="col-md-12">
        <h1>Admin Products</h1>
        <hr />

        <a class="btn btn-primary btn-sm" href="/admin/products/createProducts">Add product</a>

        <table class="table table-bordered text-center align-content-center">
            <thead>
                <tr>
                    <th style="width : 30px;">Id</th>
                    <th style="width : 100px;">Resim</th>
                    <th>Ad</th>
                    <th style="width : 20px;">Fiyat</th>
                    <th style="width : 20px;">Anasayfa</th>
                    <th style="width : 20px;">Onayla</th>
                    <th style="width : 150px;"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Products.Count > 0)
                {
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>@item.ProductId</td>
                            <td><img src="~/img/@item.ImageUrl" width="80" /> </td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>
                                @if (item.IsHome)
                                {
                                    <i class="fa-solid fa-circle-check text-success"></i>
                                }
                                else
                                {
                                    <i class="fa-solid fa-circle-xmark text-danger"></i>
                                }

                            </td>
                            <td>
                                @if (item.IsApproved)
                                {
                                    <i class="fa-solid fa-circle-check text-success"></i>
                                }
                                else
                                {
                                    <i class="fa-solid fa-circle-xmark text-danger"></i>
                                }
                            </td>
                            <td>
                                <a href="/admin/products/@item.ProductId" class="btn btn-primary btn-sm mr-2">Edit</a>
                                <form asp-controller="Admin" asp-action="Delete" asp-route-id="@item.ProductId" method="post">
                                    <button class="btn btn-danger btn-sm " type="submit">Delete</button>

                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No products</h3>
                    </div>
                }
                .

            </tbody>
        </table>
    </div>
    
</div>