@model ProductDetailModel


<div class="row">
    <div class="col-md-3">
        <img class="img-fluid" src="~/img/@Model.Product.ImageUrl" alt="@Model.Product.Name resmi" />
    </div>
    <div class="col-md-9">

        <h1 class="card-title mb-3">
            @Model.Product.Name
        </h1>
        <hr />
        @{
            var counter = 0;
        }
        @foreach (var item in Model.Categories)
        {
            <a asp-controller="Shop" asp-action="List" asp-route-category="@item.Url" class="btn btn-link mb-3 p-0">
                @item.Name
                @if (counter != Model.Categories.Count() - 1)
                {
                    <span>|</span>
                    
                }
                
            </a>
            counter++;
        }


        <div class="mb-3">
            <h4 class="text-primary">  @Model.Product.Price <small class="text-muted"><i class="fa-solid fa-turkish-lira-sign"></i></small></h4>
            <button type="submit" class="btn btn-primary btn-lg">
                Add To Cart
            </button>
        </div>

    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p class="card-text">
            @Model.Product.Description
        </p>
    </div>
</div>

